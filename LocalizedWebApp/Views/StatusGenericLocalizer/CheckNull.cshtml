@{
    ViewData["Title"] = "CheckNull";
}

<h3>Run CheckNull</h3>

<hr />
<form method="post">
    <!-- asp-validation-summary info, see https://www.learnrazorpages.com/razor-pages/tag-helpers/validation-summary-tag-helper -->
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        
        <label for="month">Provide a string (can be null)</label>
        <!-- Server-side validation info, see https://learn.microsoft.com/en-us/aspnet/core/tutorials/razor-pages/validation -->
        <input type="text" id="month" name="month">
        <br><br>

        <div class="col-md-2">
            <button type="submit" class="btn btn-success">
                Set string
            </button>
        </div>
    </div>
</form>

<p><i>Note that the header, label, submit button, etc. would normally localized via the .NET <code>IViewLocalizer</code> service.</i></p>

<div>
    <a asp-action="Index">Back to StatusGenericLocalizer Home</a>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}